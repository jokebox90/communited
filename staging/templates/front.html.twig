		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="relative min-h-screen w-screen overflow-x-hidden overflow-y-scroll flex flex-col bg-gradient-to-b from-zinc-50 to-zinc-200 text-zinc-900">
		<div id="root"></div>
	</body>
</html>
